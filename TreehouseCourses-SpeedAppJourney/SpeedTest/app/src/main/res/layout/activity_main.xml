<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutConstraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

        <TextView
            android:id="@+id/upSpeedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="UPLOAD SPEED"
            android:textColor="@color/light_blue"
            app:layout_constraintBottom_toTopOf="@+id/upSpeedNumber"
            app:layout_constraintEnd_toEndOf="@+id/upSpeedNumber"
            app:layout_constraintStart_toStartOf="@+id/upSpeedNumber" />

        <TextView
            android:id="@+id/attribute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="8dp"
            android:text="@string/attribute_message"
            android:textColor="@color/light_blue"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/downSpeedNumber"
            android:layout_width="184dp"
            android:layout_height="68dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="60dp"
            android:text="320.00"
            android:textAlignment="center"
            android:textColor="@color/light_blue"
            android:textColorHighlight="@color/white"
            android:textSize="50sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/moonImage" />

        <TextView
            android:id="@+id/upSpeedNumber"
            android:layout_width="184dp"
            android:layout_height="68dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="16dp"
            android:text="150.00"
            android:textAlignment="center"
            android:textColor="@color/light_blue"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/moonImage" />

        <ImageView
            android:id="@+id/whiteBolt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-85dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/lightning_bolt"
            android:src="@drawable/outline_bolt_white_18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/attribute"
            app:layout_constraintTop_toTopOf="@+id/attribute" />


        <TextView
            android:id="@+id/downSpeedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="DOWNLOAD SPEED"
            android:textColor="@color/light_blue"
            app:layout_constraintBottom_toTopOf="@+id/downSpeedNumber"
            app:layout_constraintEnd_toEndOf="@+id/downSpeedNumber"
            app:layout_constraintStart_toStartOf="@+id/downSpeedNumber" />

        <Button
            android:id="@+id/testButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="#00FFFFFF"
            android:focusable="auto"
            android:singleLine="false"
            android:text="@string/test_speed_please"
            android:textAllCaps="false"
            android:textColor="@color/light_blue"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/lightSwitch"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent" />

        <ToggleButton
            android:id="@+id/lightSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:background="@color/black"
            android:backgroundTint="#CC00FFFF"
            android:buttonTint="@color/black"
            android:checked="false"
            android:text="@string/afraid_of_the_dark"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textOff="Surprise"
            android:textOn="BAM"
            app:layout_constraintBottom_toTopOf="@+id/attribute"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Afraid of the Dark?" />

        <TextView
            android:id="@+id/infoText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="24dp"
            android:text="We tested how fast your speed is. Nice connection!"
            android:textSize="16sp"
            android:typeface="serif"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/downSpeedNumber" />

        <ImageView
            android:id="@+id/moonImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/outline_dark_mode_white_36dp" />

        <ImageView
            android:id="@+id/sunImage"
            android:layout_width="58dp"
            android:layout_height="72dp"
            android:layout_marginTop="60dp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/outline_wb_sunny_black_24dp" />

        <ImageView
            android:id="@+id/blackBolt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/whiteBolt"
            app:layout_constraintTop_toTopOf="@+id/attribute"
            app:srcCompat="@drawable/outline_bolt_black_18dp" />

</androidx.constraintlayout.widget.ConstraintLayout>